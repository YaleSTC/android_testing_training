<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="SmallProgressBar" parent="ProgressBar">
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
        <item name="android:minWidth">14dip</item>
        <item name="android:maxWidth">14dip</item>
    </style>

    <style name="LargeProgressBar" parent="ProgressBar">
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_above">@id/photo_description</item>
        <item name="android:layout_alignBottom">@id/photo_blowup</item>
        <item name="android:layout_alignStart">@id/photo_blowup</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
